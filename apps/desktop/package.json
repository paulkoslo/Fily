{
  "name": "@virtual-finder/desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc -b",
    "dev": "npm run build && unset ELECTRON_RUN_AS_NODE && electron .",
    "start": "unset ELECTRON_RUN_AS_NODE && electron .",
    "package": "electron-builder",
    "clean": "rm -rf dist out",
    "postinstall": "electron-rebuild -f -w better-sqlite3 --version=27.3.0"
  },
  "dependencies": {
    "@virtual-finder/core": "file:../../packages/core",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "electron": "^27.3.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.virtualfinder.app",
    "productName": "Virtual Finder",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dir"
    },
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "!node_modules/@virtual-finder/core/src",
      "!**/*.ts",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "../ui/dist",
        "to": "ui"
      }
    ]
  }
}
